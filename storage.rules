rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Resim dosyaları için kurallar
    match /images/{allPaths=**} {
      // Herkes okuyabilir
      allow read: if true;
      
      // Sadece admin kullanıcılar yazabilir
      allow write: if request.auth != null && 
        (request.auth.token.email == 'yusuffrkn73@gmail.com' || 
         firestore.get(/databases/(default)/documents/admin_users/$(request.auth.uid)).data.role in ['admin', 'manager']);
    }
    
    // Görev görselleri için kurallar
    match /task_images/{allPaths=**} {
      // Herkes okuyabilir
      allow read: if true;
      
      // Kimlik doğrulaması yapmış herkes yazabilir
      allow write: if request.auth != null;
    }
    
    // Ürün görselleri için kurallar
    match /products/{allPaths=**} {
      // Herkes okuyabilir
      allow read: if true;
      
      // Kimlik doğrulaması yapmış herkes yazabilir (masa siparişi için)
      allow write: if request.auth != null;
    }
    
    // Diğer dosyalar için varsayılan kurallar
    match /{allPaths=**} {
      // Sadece admin kullanıcılar erişebilir
      allow read, write: if request.auth != null && 
        (request.auth.token.email == 'yusuffrkn73@gmail.com' || 
         firestore.get(/databases/(default)/documents/admin_users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
